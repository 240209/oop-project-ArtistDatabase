<UserControl x:Class="projekt_ArtistDatabase.ArtistAlbumsEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projekt_ArtistDatabase"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="Albums:" Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource HeaderLabel}"/>

            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <Button Content="Cancel" FontSize="14" Command="{Binding CancelCommand}"/>
                <Button Content="Submit" Margin="5 0" FontSize="14" Command="{Binding SubmitCommand}"/>
            </StackPanel>
        </Grid>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="10 0">
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding hasAlbums}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <TextBlock Text="Add the first album!" FontSize="14" VerticalAlignment="Center"/>
            </Grid>

            <ListView BorderThickness="0" ItemsSource="{Binding Albums}" Margin="20 0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Year}" FontSize="14" Padding="0" Foreground="Black"/>
                            <TextBlock Text=": " FontSize="14" Padding="0" Foreground="Black"/>
                            <TextBlock Text="{Binding Name}" FontSize="14" Padding="0" Foreground="Black"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>


        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="10">
            <Button Content="New Album" FontSize="14" Command="{Binding NewAlbum}"/>
            <Button Content="Remove album" Margin="5 0 0 0" FontSize="14" Command="{Binding RemoveAlbum}"/>
            <Button Content="Edit album" Margin="5 0 0 0" FontSize="14" Command="{Binding EditAlbum}"/>
        </StackPanel>
    </Grid>
</UserControl>
